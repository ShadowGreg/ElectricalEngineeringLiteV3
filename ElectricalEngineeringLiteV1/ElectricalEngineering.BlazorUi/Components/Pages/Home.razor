@page "/"
@using ElectricalEngineering.BlazorUi.Controllers
@using ElectricalEngineering.Data
@using ElectricalEngineering.Domain.Feeder
@using ElectricalEngineering.DomainServices.Calculators
@using Microsoft.EntityFrameworkCore

@inject DataContext DbContext
@inject BaseConsumerService BaseConsumerService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

@if (_consumers is not null)
{
    @foreach (var consumer in _consumers)
    {
        <tr>
            <td>@consumer.SelfId</td>
            <td>@consumer.Name</td>
            <td>@consumer.MechanismName</td>
            <td>@consumer.RatedElectricPower</td>
            <td>@consumer.EfficiencyFactor</td>
        </tr>
    }
}
else
{
    <div>Загрузка потребителей...</div>
}

@code {
    private List<BaseConsumer>? _consumers;

    protected override async Task OnInitializedAsync()
    {
        // await base.OnInitializedAsync();
        // await DbContext.Database.EnsureCreatedAsync();
        // _consumers = await DbContext.Consumers.ToListAsync();
        _consumers = (List<BaseConsumer>?)await BaseConsumerService.GetAllConsumersAsync();
    }

}